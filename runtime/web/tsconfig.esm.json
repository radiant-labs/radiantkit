{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "allowJs": true,
      "module": "ESNext",
      "outDir": "lib/esm",
      "declarationDir": "lib/types"
    },
    "rootDir": "./src",
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts",
      "tests/**/*.test.ts",
      "tests/**/*.spec.ts",
      "node_modules",
      "lib"
    ]
  }